{
  "manifest_version": 2,
  "name": "Eat The Leetcode Frog",
  "version": "1.0",
  "description": "Forces you to complete one LeetCode problem daily before browsing",
  
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  
  "web_accessible_resources": [
    "blocked.html",
    "problems.json"
  ]
}
