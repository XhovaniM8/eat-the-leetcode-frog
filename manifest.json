}{
  "manifest_version": 2,
  "name": "Daily LeetCode Enforcer",
  "version": "1.0.0",
  "description": "Stay disciplined! Complete one LeetCode problem daily before browsing. Features NeetCode 150 problems ordered by difficulty.",
  "author": "Xhovani Mali",
  "homepage_url": "https://github.com/XhovaniM8/eat-the-leetcode-frog",
  
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  
  "web_accessible_resources": [
    "blocked.html",
    "problems.json"
  ]
}
